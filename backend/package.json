{
  "name": "task-manager-backend",
  "version": "1.0.0",
  "description": "团队任务管理系统后端API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:init": "node scripts/init-db.js",
    "db:seed": "node scripts/seed-data.js",
    "db:reset": "node scripts/reset-db.js",
    "build": "echo 'Backend build completed'",
    "clean": "rm -rf node_modules package-lock.json",
    "install:clean": "npm run clean && npm install",
    "logs": "tail -f logs/app.log",
    "health": "curl http://localhost:3001/api/health"
  },
  "keywords": [
    "nodejs",
    "express",
    "sqlite",
    "api",
    "task-management"
  ],
  "author": "四人小组",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "jest": "^29.3.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
